{
  "name": "engine-metrics-agent",
  "version": "1.0.0",
  "description": "AI-powered chess engine analysis platform for RTS Technology & Solutions",
  "main": "index.js",
  "scripts": {
    "setup": "bash scripts/setup-firebase.sh",
    "dev": "concurrently \"npm run frontend\" \"npm run backend\" \"npm run ai\"",
    "frontend": "cd src/frontend && npm start",
    "backend": "cd src/backend/functions && npm run serve",
    "ai": "cd src/ai && python -m flask run --port=5001",
    "build": "cd src/frontend && npm run build",
    "deploy": "bash scripts/deploy.sh",
    "deploy:frontend": "firebase deploy --only hosting",
    "deploy:backend": "firebase deploy --only functions",
    "deploy:rules": "firebase deploy --only firestore,storage",
    "test": "cd src/frontend && npm test",
    "test:backend": "cd src/backend/functions && npm test",
    "logs": "firebase functions:log",
    "emulator": "firebase emulators:start",
    "install:all": "npm install && cd src/frontend && npm install && cd ../backend/functions && npm install",
    "lint": "eslint src/"
  },
  "keywords": [
    "chess",
    "engine",
    "ai",
    "analytics",
    "firebase",
    "machine-learning"
  ],
  "author": "RTS Technology & Solutions LLC",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.6.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rts-technology/engine-metrics-agent"
  }
}
