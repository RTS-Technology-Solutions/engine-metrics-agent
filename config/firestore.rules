rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Engine data - read only for authenticated users, write for admin
    match /engines/{engineId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Game data - read only for authenticated users, write for admin
    match /games/{gameId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Analysis results - read only for authenticated users, write for system
    match /analysis/{analysisId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Uploaded files metadata
    match /uploads/{uploadId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}